<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>				
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:module
					name="shop"
					action="show_category"
					id="fix_id($_REQUEST['id'])"
					template="parts/category_name.xml"
					cms:eval="id"
					/>
			</title>
			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_category"
				id="fix_id($_REQUEST['id'])"
				template="parts/page_description.xml"
				cms:eval="id"
				/>
			<cms:module
				name="shop"
				action="include_cart_scripts"
				/>
			<cms:script src="_BASEURL.'/site/scripts/floating_menu.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:template file="parts/header.xml"/>

			<section class="category" data-id="$_REQUEST['id']" cms:eval="data-id">
				<h1>
					<cms:module
						name="shop"
						action="show_category"
						id="fix_id($_REQUEST['id'])"
						template="parts/category_name.xml"
						cms:eval="id"
						/>
				</h1>	

				<cms:module
					name="shop"
					action="show_item_list"
					category="fix_id($_REQUEST['id'])"
					template="parts/shop_item.xml"
					cms:eval="category"
					/>
			</section>

			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
