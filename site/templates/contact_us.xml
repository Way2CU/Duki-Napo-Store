<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_contact_us"/>
			</title>
			<cms:module
				name="shop"
				action="include_cart_scripts"
				/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:raw file="parts/gtm.txt"/>
			<cms:template file="parts/header.xml"/>
			<div
				class="$section == 'contact-us' ? 'contact_us' : false"
				cms:optional="class"
				>
				<cms:module
					name="articles"
					action="show"
					class="'article '.$params['text_id']" cms:eval="class"
					text_id="address_article"
					template="parts/article_no_heading.xml"
					/>
				<div class="form_wrap">
					<h3><cms:text constant="form_title"/></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</div>
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
