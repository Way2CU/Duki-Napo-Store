<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:mobile>
		<article>
			<h1><cms:var param="name" multilanguage="yes"/></h1>
			<cms:markdown param="description" multilanguage="yes"/>
			<span><cms:var param="price"/>$</span>
		</article>
	</cms:mobile>

	<div class="images">
		<figure>
			<a
				href="$params['image']"
				cms:eval="href"
				>
				<img
					src="gallery::getGroupThumbnailById($params['gallery'], null, 436)"
					alt="$params['name']"
					cms:eval="src,alt"
					/>
			</a>
		</figure>

		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>
		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>
		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>
		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>
		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>
	</div>

	<div class="info" data-uid="$params['uid']" cms:eval="data-uid">
		<cms:desktop>
			<article>
				<h1><cms:var param="name" multilanguage="yes"/></h1>
				<cms:markdown param="description" multilanguage="yes"/>
			</article>
		</cms:desktop>

		<div class="properties">
			<div class="color">
				<h4><cms:text constant="property_color"/></h4>
				<cms:color_list
					id="$params['id']"
					template="parts/item_colors.xml"
					cms:eval="id"
					/>
			</div>

			<div class="size">
				<h4><cms:text constant="property_size"/></h4>
				<select>
					<cms:value_list
						definition="$params['size_definition']"
						template="parts/size.xml"
						cms:eval="definition"
						/>
				</select>
			</div>

			<div class="weight">
				<h4><cms:text constant="property_weight"/></h4>
				<span><cms:var param="weight"/>g</span>
			</div>

			<div class="price">
				<h4><cms:text constant="property_price"/></h4>
				<span><cms:var param="price"/>$</span>
			</div>

			<a href="javascript:void(0)"><cms:text constant="add_to_cart"/></a>
		</div>

		<cms:desktop>
			<div id="order_policy">
				<label>
					<input type="checkbox"/>
					<h5>PRODUCT DETAILS</h5>
					<div>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid nam veritatis, maxime saepe eos eveniet eaque! Facere, doloribus repellat, vitae accusamus dicta, quisquam debitis dolorem rem facilis provident odio itaque.</div>
				</label>
