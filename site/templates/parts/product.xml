<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:mobile>
		<article>
			<h1><cms:var param="name" multilanguage="yes"/></h1>
			<cms:markdown param="description" multilanguage="yes"/>
		</article>
	</cms:mobile>

	<div class="images">
		<cms:desktop>
			<figure>
				<a
					href="$params['image']"
					cms:eval="href"
					>
					<img
						src="gallery::getGroupThumbnailById($params['gallery'], null, 436)"
						alt="$params['name'][$language]"
						cms:eval="src,alt"
						/>
				</a>
			</figure>
		</cms:desktop>

		<cms:mobile>
			<figure>
				<a
					href="$params['image']"
					cms:eval="href"
					>
					<img
						src="gallery::getGroupThumbnailById($params['gallery'], null, 280)"
						alt="$params['name'][$language]"
						cms:eval="src,alt"
						/>
				</a>
			</figure>
		</cms:mobile>

		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>

		<div class="social">
			<span><cms:text constant="label_share"/></span>

			<a 
				href="'https://www.facebook.com/sharer/sharer.php?u='.urlencode(url_Make('product', 'shop', array('id', $_REQUEST['id'])))" class="facebook" 
				cms:eval="href"
				>
				<svg>
					<use
						href="#facebook"
						xlink:href="_BASEURL.'/site/images/site-icons.svg#facebook'"
						cms:eval="xlink:href"
						/>
				</svg>
			</a>
			<a 
				href="'https://twitter.com/home?status='.urlencode(url_Make('product', 'shop', array('id', $_REQUEST['id'])))" class="twitter"
				cms:eval="href"
				>
				<svg>
					<use
						href="#twitter"
						xlink:href="_BASEURL.'/site/images/site-icons.svg#twitter'"
						cms:eval="xlink:href"
						/>
				</svg>
			</a>
			<a 
				href="'https://pinterest.com/pin/create/button/?url=&amp;media=&amp;description='.urlencode(url_Make('product', 'shop', array('id', $_REQUEST['id'])))" 
				class="instagram"
				cms:eval="href"
				>
				<svg>
					<use
						href="#pintarest"
						xlink:href="_BASEURL.'/site/images/site-icons.svg#pintarest'"
						cms:eval="xlink:href"
						/>
				</svg>
			</a>
			<a href="mailto://dukivenapo26@gmail.com" class="mail">
				<svg>
					<use
						href="#mail"
						xlink:href="_BASEURL.'/site/images/site-icons.svg#mail'"
						cms:eval="xlink:href"
						/>
				</svg>
			</a>
		</div>
	</div>

	<div class="info" data-uid="$params['uid']" cms:eval="data-uid">
		<cms:desktop>
			<article>
				<h1><cms:var param="name" multilanguage="yes"/></h1>
				<cms:markdown param="description" multilanguage="yes"/>
			</article>
		</cms:desktop>

		<div class="properties">
			<div class="color">
				<h4><cms:text constant="property_color"/></h4>
				<cms:color_list
					id="$params['id']"
					template="parts/item_color_names.xml"
					cms:eval="id"
					/>
			</div>

			<div class="size">
				<h4><cms:text constant="property_size"/></h4>
				<cms:module
					name="downloads"
					action="show_list"
					template="parts/downloads.xml"
					/>
				<select>
					<cms:value_list
						definition="$params['size_definition']"
						template="parts/size.xml"
						cms:eval="definition"
						/>
				</select>
			</div>

			<div class="weight">
				<h4><cms:text constant="property_weight"/></h4>
				<span><cms:var param="weight"/></span>
			</div>

			<div>
				<cms:module
					name="shop"
					action="show_property"
					item="$params['id']"
					text_id="diamond_color"
					cms:eval="item"
					template="parts/product_properties.xml"
					/>
			</div>

			<div>
				<cms:module
					name="shop"
					action="show_property"
					item="$params['id']"
					text_id="gold_color"
					cms:eval="item"
					template="parts/product_properties.xml"
					/>
			</div>

			<div>
				<cms:module
					name="shop"
					action="show_property"
					item="$params['id']"
					text_id="gold_size"
					cms:eval="item"
					template="parts/product_properties.xml"
					/>
			</div>
		</div>

		<div class="price">
			<h4><cms:text constant="property_price"/></h4>
			<span data-currency="shop::getDefaultCurrency()" cms:eval="data-currency" >
				<cms:var param="price"/>
			</span>
			<a href="javascript:void(0)" class="btn_cart">
				<cms:text constant="add_to_cart"/>
			</a>
		</div>

		<div class="policy">
			<cms:module
				name="articles"
				action="show"
				text_id="short_shipping_policy"
				template="parts/policy.xml"
				/>
			<cms:module
				name="articles"
				action="show"
				text_id="short_return_policy"
				template="parts/policy.xml"
				/>
			<cms:module
				name="articles"
				action="show"
				text_id="short_need_assistance"
				template="parts/policy.xml"
				/>
		</div>
	</div>

	<div class="related_items">
		<h3><cms:text constant="related"/></h3>
		<cms:module
			name="shop"
			action="show_item_list"
			category="$_REQUEST['category']"
			related="$params['id']"
			template="parts/shop_item.xml"
			cms:eval="related,category"
			/>
	</div>
</document>