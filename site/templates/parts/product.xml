<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
		<cms:mobile>
			<article>
				<h3><cms:var param="name" multilanguage="yes"/></h3>
				<span><cms:var param="description" multilanguage="yes"/></span>
				<span><cms:var param="price"/>$</span>
			</article>
		</cms:mobile>
		<div class="images_wrap">

			<figure style="'background-image: url('.$params['image'].');'" cms:eval="style"></figure>
			<div class="product_gallery">
			<cms:module
				name="gallery"
				action="show_image_list"
				group_id="$params['gallery']"
				template="parts/product_image.xml"
				cms:eval="group_id"
				/>
			</div>

		</div>

		<div class="info_wrap" data-uid="$params['uid']" cms:eval="data-uid">

			<cms:desktop>
				<article>
					<h3><cms:var param="name" multilanguage="yes"/></h3>
					<span><cms:var param="description" multilanguage="yes"/></span>
				</article>
			</cms:desktop>

				<div class="info">

					<div class="color">
						<h3><cms:text constant="color"/></h3>
						<cms:color_list
	 						id="$params['id']"
	 						template="parts/item_colors.xml"
	 						cms:eval="id"
						/>
					</div>

					<div class="weight">
						<h3>Weight</h3>
						<span><cms:var param="weight"/>g</span>
					</div>

					<h3><cms:text constant="size"/></h3>
					<cms:value_list
						definition="$params['size_definition']"
						template="parts/size.xml"
						cms:eval="definition"
					/>

					<span class="size_error"><cms:text constant="size_error"/></span>

					<label>
					<h3><cms:text constant="quantity"/></h3>
					<input type="number" value="1"/>
					</label>
					<div class="price">
						<h3><cms:text constant="price"/></h3>
						<span><cms:var param="price"/>$</span>
					</div>
					<a href="javascript:void(0)"><cms:text constant="add_bag"/></a>
				</div>

				<div class="related_items">
					<h3><cms:text constant="related"/></h3>
					<cms:module
						name="shop"
						action="show_item_list"
						category="$_REQUEST['category']"
						related="$params['id']"
						template="parts/related_items.xml"
						cms:eval="related,category"
						/>
				</div>

			<cms:desktop>

				<div id="order_policy">
					<label>
						<input type="checkbox"/>
