<document>
	<a
		href="url_Make('product', 'shop', array('category', fix_id($_REQUEST['id'])), array('id',$params['id']))"
		class="item"
		cms:eval="href"
		>
		<span class="image">
			<img
				src="gallery::getGroupThumbnailById($params['gallery'], null, 100)"
				alt="$params['name'][$language]"
				cms:eval="src,alt"
				/>
		</span>
		<span class="name">
			<cms:var param="name" multilanguage="yes"/>
		</span>
		<cms:color_list
			id="$params['id']"
			template="parts/item_colors.xml"
			cms:eval="id"
			/>
		<span
			class="price"
			data-currency="$params['currency']"
			cms:eval="data-currency"
			>
			<cms:var param="price"/>
		</span>
	</a>
</document>