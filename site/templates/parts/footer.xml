<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<footer>
		<div class="footer_top">
			<h2><cms:text constant="footer_title"/></h2>
			<nav id="footer_nav">
				<ul>
					<li>
						<a
							class="$section == 'about_us' ? 'active' : false"
							href="url_Make('', 'about_us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_about_us"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'diamonds' ? 'active' : false"
							href="url_Make('', 'diamonds')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_jewellery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'gallery' ? 'active' : false"
							href="url_Make('', 'gallery')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_gallery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'contact_us' ? 'active' : false"
							href="url_Make('', 'contact_us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_contact_us"/>
						</a>
					</li>
				</ul>

				<ul>
					<cms:module
						name="shop"
						action="show_category_list"
						template="parts/category_menu_item.xml"
						/>
				</ul>
			</nav>
			<cms:module
	 				name="contact_form"
	 				action="show"
	 				text_id="newsletter_form"
						/>
			<div class="social">
				<span><cms:text constant="social_title"/></span>
				<a href="#"></a>
				<a href="#"></a>
				<a href="#"></a>
			</div>
			<div class="payment">
				<span></span>
				<span></span>
				<span></span>
				<span></span>
				<span></span>
				<span></span>
				<span></span>
			</div>
		</div>
		<div class="rights">
			<span><cms:text constant="duki_rights"/></span>
			<span><cms:text constant="copyright"/></span>
		</div>
	</footer>
</document>