<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:mobile>
		<article>
			<h1><cms:var param="name" multilanguage="yes"/></h1>
			<cms:markdown param="description" multilanguage="yes"/>
			<span><cms:var param="price"/>$</span>
		</article>
	</cms:mobile>

	<div class="images">
		<figure>
			<a
				href="$params['image']"
				cms:eval="href"
				>
				<img
					src="gallery::getGroupThumbnailById($params['gallery'], null, 436)"
					alt="$params['name']"
					cms:eval="src,alt"
					/>
			</a>
		</figure>

		<cms:module
			name="gallery"
			action="show_image_list"
			group_id="$params['gallery']"
			template="parts/product_image.xml"
			cms:eval="group_id"
			/>

	</div>

	<div class="info" data-uid="$params['uid']" cms:eval="data-uid">
		<cms:desktop>
			<article>
				<h1><cms:var param="name" multilanguage="yes"/></h1>
				<cms:markdown param="description" multilanguage="yes"/>
			</article>
		</cms:desktop>

		<div class="properties">
			<div class="color">
				<h4><cms:text constant="property_color"/></h4>
				<cms:color_list
					id="$params['id']"
					template="parts/item_color_names.xml"
					cms:eval="id"
					/>
			</div>

			<div class="size">
				<h4><cms:text constant="property_size"/></h4>
				<select>
					<cms:value_list
						definition="$params['size_definition']"
						template="parts/size.xml"
						cms:eval="definition"
						/>
				</select>
			</div>

			<div class="weight">
				<h4><cms:text constant="property_weight"/></h4>
				<span><cms:var param="weight"/>g</span>
			</div>

			<div class="price">
				<h4><cms:text constant="property_price"/></h4>
				<span><cms:text constant="currency"/><cms:raw text=" "/><cms:var param="price"/></span>
			</div>

			<a href="javascript:void(0)" class="btn_cart"><cms:text constant="add_to_cart"/></a>
		</div>

		<cms:desktop>
			<div class="policy">
				<cms:module
					name="articles"
					action="show"
					text_id="short_shipping_policy"
					template="parts/policy.xml"
					/>
				<cms:module
					name="articles"
					action="show"
					text_id="short_return_policy"
					template="parts/policy.xml"
					/>
				<cms:module
					name="articles"
					action="show"
					text_id="short_need_assistance"
					template="parts/policy.xml"
					/>
			</div>

			<div class="social">
				<a href="#" class="facebook"></a>
				<a href="#" class="tweeter"></a>
				<a href="#" class="pinterst"></a>
				<a href="#" class="instagram"></a>
				<a href="#" class="google_plus"></a>
				<a href="#" class="mail"></a>
			</div>
		</cms:desktop>

		<div class="related_items">
			<h3><cms:text constant="related"/></h3>
			<cms:module
				name="shop"
				action="show_item_list"
				category="$_REQUEST['category']"
				related="$params['id']"
				template="parts/related_items.xml"
				cms:eval="related,category"
				/>
		</div>
	</div>
</document>
