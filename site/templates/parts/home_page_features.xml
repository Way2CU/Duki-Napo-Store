<document>
	<a
		href="URL::make(array('category' => $params['id']), 'category.xml')"
		cms:eval="href"
		>
		<img
			src="gallery::getThumbnailById($params['image'], null)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		<span><cms:var param="title" multilanguage="yes"/></span>
	</a>
</document>
