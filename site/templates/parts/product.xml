<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>

		<img src="$params['image']" cms:eval="src"/>
		<div class="info">
			<h3><cms:var param="name" multilanguage="yes"/></h3>
			<span><cms:var param="description" multilanguage="yes"/></span>
			<span><cms:var param="price"/>$</span>
			<div class="cart_info">
				<span><cms:text constant="color"/></span>
				<span><cms:text constant="size"/></span>
				<span><cms:text constant="quantity"/></span>
				<a href="#"><cms:text constant="add_bag"/></a>
			</div>
			<div class="social">
				<a href="#"></a>
				<a href="#"></a>
				<a href="#"></a>
				<a href="#"></a>
				<a href="#"></a>
				<a href="#"></a>
			</div>

		</div>
		<div class="product_gallery">
			<cms:module
				name="gallery"
				action="show_image_list"
				group_id="$params['gallery']"
				template="parts/product_image.xml"
				cms:eval="group_id"

				/>
		</div>



</document>