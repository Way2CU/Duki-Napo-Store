<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<!-- Save user timer -->
	<cms:guest>
		<cms:module
			name="backend"
			action="save_unpriviledged_user_timer"
			/>
	</cms:guest>

	<!-- Desktop Version -->
	<cms:desktop>
		<header
			class="$section == 'home' ? 'home' : false"
			cms:optional="class"
			>

			<!-- Top navigation -->
			<nav id="user">
				<div class="message"/>
				<div class="logo">
					<a href="#"></a>
				</div>
				<ul class="session">
					<cms:guest>
						<li><a class="sign-up" href="#"><cms:text constant="menu_signup"/></a></li>
						<li><a class="login" href="#"><cms:text constant="menu_login"/></a></li>
					</cms:guest>
					<cms:user>
						<li>
							<a
								class="control_panel"
								href="url_Make('', 'user')"
								cms:eval="href"
								>
								<cms:text constant="menu_account"/>
							</a>
						</li>
						<li><a class="logout" href="#"><cms:text constant="menu_logout"/></a></li>
					</cms:user>
				</ul>
			</nav>

			<!-- Bottom navigation -->
			<nav id="navigation">
				<ul class="drop">
					<li>
						<a href="javascript:void(0)"><cms:text constant="menu_title"/></a>
						<cms:template file="parts/simple_menu_items.xml"/>
					</li>
				</ul>

				<!-- Shop categories -->
				<ul class="categories">
					<cms:module
						name="shop"
						action="show_category_list"
						category="$params['id']"
						template="parts/category_menu_item.xml"
						cms:eval="category"
						/>
				</ul>

				<!-- Shopping cart -->
				<div id="cart">
					<em><cms:text constant="label_cart"/></em>
					<span class="count"></span>
					<span><cms:text constant="label_cart_items"/></span>

					<cms:template file="parts/cart.xml"/>
				</div>
			</nav>
		</header>
	</cms:desktop>

	<!-- Mobile version -->
	<cms:mobile>
		<header class="$section == 'home' ? 'home' : false" cms:optional="class">
			<div class="mobile_title">
				<a href="javascript:void(0)" class="menu"></a>
				<a
					class="logo"
					href="url_Make('', 'home')"
					cms:eval="href"
					cms:optional="class"
					>
				</a>
				<a href="javascript:void(0)" class="cart_btn"></a>
				<span class="mobile_count"></span>
			</div>

			<nav class="mobile_menu">
				<ul>
					<li><a class="checkout" href="#"><cms:text constant="menu_sign"/></a></li>
					<li><a class="acount" href="#"><cms:text constant="menu_account"/></a></li>
					<li>
						<a
							class="$section == 'home' ? 'active' : false"
							href="url_Make('', 'home')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_home"/>
						</a>
					</li>
				</ul>

				<ul>
					<li>
						<a
							class="$section == 'about_us' ? 'active' : false"
							href="url_Make('', 'about_us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_about_us"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'diamonds' ? 'active' : false"
							href="url_Make('', 'diamonds')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_jewellery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'gallery' ? 'active' : false"
							href="url_Make('', 'gallery')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_gallery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'contact_us' ? 'active' : false"
							href="url_Make('', 'contact_us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_contact_us"/>
						</a>
					</li>
				</ul>

				<ul>
					<cms:module
						name="shop"
						action="show_category_list"
						template="parts/category_menu_item.xml"
						/>
				</ul>

			</nav>
			<!-- Mobile Cart -->
			<cms:template file="parts/cart.xml"/>

			<!-- Shop categories -->
			<ul id="navigation">
				<cms:module
					name="shop"
					action="show_category_list"
					template="parts/category_menu_item.xml"
					/>
			</ul>

		</header>

	</cms:mobile>

</document>
