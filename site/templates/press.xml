<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/template.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/><cms:raw text=" - "/><cms:text constant="menu_gallery"/></title>
			<cms:module
				name="shop"
				action="include_cart_scripts"
				/>
			<cms:link rel="stylesheet" href="_BASEURL.'/site/styles/jquery.jMosaic.css'" cms:eval="href"/>
			<cms:script src="_BASEURL.'/site/scripts/floating_menu.js'" cms:eval="src"/>
			<cms:script src="_BASEURL.'/site/scripts/jquery.jMosaic.js'" cms:eval="src"/>
			<cms:script src="_BASEURL.'/site/scripts/mosaic_gallery.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:template file="parts/header.xml"/>

			<div class="$section == 'from-the-press' ? 'press' : false" cms:optional="class">

				<cms:module
					name="links"
					action="show_link_list"
					order_by="text_id"
					group="press"
					template="parts/press_links.xml"
				/>
			</div>

			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>