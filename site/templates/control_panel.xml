<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module
				name="shop"
				action="include_cart_scripts"
				/>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:template file="parts/header.xml"/>

			<section class="user">
			<!-- Shopping cart -->
			<cms:template file="parts/cart_list.xml"/>
				
				<!-- Show list of previous purchases -->
				<div id="transactions">
					<cms:user>
						<cms:module
							name="shop"
							action="show_transaction_list"
							order_by="id"
							order_asc="0"
							system_user="$_SESSION['uid']"
							cms:eval="system_user"
							template="parts/transaction.xml"
							/>
					</cms:user>
				</div>

			</section>

			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
