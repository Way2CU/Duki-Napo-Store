<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:raw file="../gtm.txt"/>
	<!-- Save user timer -->
	<cms:guest>
		<cms:module
			name="backend"
			action="save_unpriviledged_user_timer"
			/>
	</cms:guest>

	<!-- Desktop Version -->
	<cms:desktop>
		<header class="$section" cms:eval="class">
			<cms:svg file="site-icons.svg"/>

			<div class="top_header">
				<ul class="drop">
					<li>
						<a href="javascript:void(0)">
							<svg>
								<use
									href="#menu"
									xlink:href="site/images/site-icons#menu"
									/>
							</svg>
							<cms:text constant="menu_title"/>
						</a>
						<cms:template file="parts/simple_menu_items.xml"/>
					</li>
				</ul>

				<a  class="logo" href="url_Make('','home')" cms:eval="href">
					<img src="_BASEURL.'/site/images/header/logo-symbol.svg'"  alt="logo-symbol" cms:eval="src"/>
					<img src="_BASEURL.'/site/images/header/type-logo.svg'"  alt="type-logo" cms:eval="src"/>
				</a>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<svg>
						<use
							href="#phone"
							xlink:href="site/images/site-icons.svg#phone"
							/>
					</svg>
					<cms:text constant="phone_text"/>
				</a>
			</div>

			<!-- Top navigation -->
			<nav id="user">
				<ul class="contact">
					<li>
						<a href="url_Make('', 'contact-us')" cms:eval="href" cms:optional="class">
							<svg>
								<use
									href="#envelope"
									xlink:href="site/images/site-icons#envelope"
									/>
							</svg>
							<cms:text constant="menu_contact_us"/>
						</a>
					</li>
					<li>
						<a href="javascript:void(0)">
							<svg>
								<use
									href="#chat"
									xlink:href="site/images/site-icons#chat"
									/>
							</svg>
							<cms:text constant="label_chat"/>
						</a>
					</li>
				</ul>

				<div class="message">
					<cms:guest>
						<cms:text constant="welcome_guest"/>
					</cms:guest>
					<cms:user>
						<cms:text constant="welcome_user"/>
						<cms:raw text="&amp;nbsp;"/>
						<cms:var name="$_SESSION['fullname']"/>
						<cms:text constant="welcome_user2"/>
					</cms:user>
				</div>
				<ul class="session">
					<cms:guest>
						<li>
							<a class="sign-up" href="#">
								<svg>
									<use
										href="#signup"
										xlink:href="site/images/site-icons#signup"
										/>
								</svg>
								<cms:text constant="menu_signup"/>
							</a>
						</li>
						<li>
							<a class="login" href="#">
								<svg>
									<use
										href="#login"
										xlink:href="site/images/site-icons#login"
										/>
								</svg>
								<cms:text constant="menu_login"/>
							</a>
						</li>
					</cms:guest>
					<cms:user>
						<li>
							<a
								class="control_panel"
								href="url_Make('', 'user')"
								cms:eval="href"
								>
								<svg>
									<use
										href="#cog"
										xlink:href="site/images/site-icons#cog"
										/>
								</svg>
								<cms:text constant="menu_account"/>
							</a>
						</li>
						<li>
							<a class="logout" href="#">
								<svg>
									<use
										href="#enter"
										xlink:href="site/images/site-icons#enter"
										/>
								</svg>
								<cms:text constant="menu_logout"/>
							</a>
						</li>
					</cms:user>
				</ul>
			</nav>

			<!-- Bottom navigation -->
			<nav id="navigation">
				<!-- Shop categories -->
				<ul class="categories">
					<cms:module
						name="shop"
						action="show_category_list"
						template="parts/category_menu_item.xml"
						/>
				</ul>

				<!-- Shopping cart -->
				<div id="cart">
					<svg>
						<use
							href="#cart"
							xlink:href="site/images/site-icons.svg#cart"
							/>
					</svg>
					<em><cms:text constant="label_cart"/></em>
					<span class="count"></span>
					<span><cms:text constant="label_cart_items"/></span>

					<cms:template file="parts/cart.xml"/>
				</div>
			</nav>
		</header>
	</cms:desktop>

	<!-- Mobile version -->
	<cms:mobile>
		<header class="$section == 'home' ? 'home' : false" cms:optional="class">
			<div class="mobile_title">
				<a href="javascript:void(0)" class="menu"></a>
				<a
					class="logo"
					href="url_Make('', 'home')"
					cms:eval="href"
					cms:optional="class"
					>
				</a>
				<a href="javascript:void(0)" class="cart_btn"></a>
				<span class="mobile_count"></span>
			</div>

			<nav class="mobile_menu">
				<ul>
				<cms:guest>
					<li><a class="sign-up" href="#"><cms:text constant="menu_signup"/></a></li>
					<li><a class="login" href="#"><cms:text constant="menu_login"/></a></li>
				</cms:guest>
				<cms:user>
					<li>
						<a
							class="control_panel"
							href="url_Make('', 'user')"
							cms:eval="href"
							>
							<cms:text constant="menu_account"/>
						</a>
					</li>
					<li><a class="logout" href="#"><cms:text constant="menu_logout"/></a></li>
				</cms:user>
					<li>
						<a
							class="$section == 'home' ? 'active' : false"
							href="url_Make('', 'home')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_home"/>
						</a>
					</li>
				</ul>

				<ul>
					<li>
						<a
							class="$section == 'about-us' ? 'active' : false"
							href="url_Make('', 'about-us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_about_us"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'diamonds' ? 'active' : false"
							href="url_Make('', 'diamonds')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_jewellery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'portfolio' ? 'active' : false"
							href="url_Make('', 'portfolio')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_gallery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'contact-us' ? 'active' : false"
							href="url_Make('', 'contact-us')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_contact_us"/>
						</a>
					</li>
					<li>
						<a href="javascript:void(0)" >
							<cms:text constant="menu_privacy"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'in-news' ? 'active' : false"
							href="url_Make('', 'in-news')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_press"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'vip' ? 'active' : false"
							href="url_Make('', 'vip')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_vip"/>
						</a>
					</li>
				</ul>

				<ul>
					<cms:module
						name="shop"
						action="show_category_list"
						template="parts/category_menu_item.xml"
						/>
				</ul>

			</nav>
			<!-- Mobile Cart -->
			<cms:template file="parts/cart.xml"/>

			<!-- Shop categories -->
			<ul id="navigation">
				<cms:module
					name="shop"
					action="show_category_list"
					template="parts/category_menu_item.xml"
					/>
			</ul>
		</header>
	</cms:mobile>
</document>