<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:svg file="site-icons.svg"/>
	<cms:raw file="../gtm.txt"/>
	<!-- Save user timer -->
	<cms:guest>
		<cms:module
			name="backend"
			action="save_unpriviledged_user_timer"
			/>
	</cms:guest>

	<!-- Desktop Version -->
	<cms:desktop>
		<header class="URL::is_active('home.xml') ? 'home' : false" cms:optional="class">
			<div class="top_header">
				<a  class="logo" href="URL::make()" cms:eval="href">
					<img src="_BASEURL.'/site/images/header/logo-symbol.svg'"  alt="logo-symbol" cms:eval="src"/>
					<img src="_BASEURL.'/site/images/header/type-logo.svg'"  alt="type-logo" cms:eval="src"/>
				</a>
			</div>

			<!-- Bottom navigation -->
			<nav id="navigation">
				<ul class="drop">
					<li>
						<a href="javascript:void(0)">
							<cms:svg file="site-icons.svg" symbol="menu"/>
							<cms:text constant="menu_title"/>
						</a>
						<cms:template file="parts/simple_menu_items.xml"/>
					</li>
				</ul>

				<!-- phone link -->
				<a
					href="'tel:'.urlencode(Language::get_Text('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:svg file="site-icons.svg" symbol="phone"/>
					<cms:text constant="phone"/>
				</a>

				<!-- Shop categories -->
				<ul class="categories">
					<cms:module
						name="shop"
						action="show_category"
						text_id="ring"
						template="parts/category_menu_item.xml"
						/>
					<cms:module
						name="shop"
						action="show_category"
						text_id="bracelet"
						template="parts/category_menu_item.xml"
						/>
					<cms:module
						name="shop"
						action="show_category"
						text_id="pendant"
						template="parts/category_menu_item.xml"
						/>
					<cms:module
						name="shop"
						action="show_category"
						text_id="earing"
						template="parts/category_menu_item.xml"
						/>
				</ul>

				<!-- Shopping cart -->
				<div id="cart">
					<cms:svg file="site-icons.svg" symbol="cart"/>
					<em><cms:text constant="label_cart"/></em>
					<span class="count"></span>
					<span><cms:text constant="label_cart_items"/></span>

					<cms:template file="parts/cart.xml"/>
				</div>
			</nav>
		</header>
	</cms:desktop>

	<!-- Mobile version -->
	<cms:mobile>
		<header class="$section == 'home' ? 'home' : false" cms:optional="class">
			<div class="mobile_title">
				<a href="javascript:void(0)" class="menu">
					<span></span>
				</a>

				<!-- phone link -->
				<a
					href="'tel:'.urlencode(Language::get_Text('phone'))"
					cms:eval="href"
					class="phone"
					>
					<cms:svg file="site-icons.svg" symbol="phone"/>
				</a>

				<a
					class="logo"
					href="url_Make('', 'home')"
					cms:eval="href"
					>
				</a>
				<a href="javascript:void(0)" class="cart_btn"></a>
				<span class="mobile_count"></span>
			</div>

			<nav class="mobile_menu">
				<ul>
					<li>
						<a
							class="$section == 'home' ? 'active' : false"
							href="URL::make()"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_home"/>
						</a>
					</li>
				</ul>

				<ul>
					<li>
						<a
							class="$section == 'about-us' ? 'active' : false"
							href="URL::make(array(), 'about_us.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_about_us"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'from-the-press' ? 'active' : false"
							href="URL::make(array(), 'press.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_press"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'gallery' ? 'active' : false"
							href="URL::make(array(), 'gallery.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_gallery"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'vip' ? 'active' : false"
							href="URL::make(array(), 'vip.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_vip"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'about-us' and $action == 'privacy-policy' ? 'active' : false"
							href="URL::make(array(), 'privacy_policy.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_privacy"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'about-us' and $action == 'terms-and-conditions' ? 'active' : false"
							href="URL::make(array(), 'terms_and_conditions.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_terms_and_conditions"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'contact-us' ? 'active' : false"
							href="URL::make(array(), 'contact_us.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_contact_us"/>
						</a>
					</li>
					<li>
						<a
							class="$section == 'diamonds' ? 'active' : false"
							href="URL::make(array(), 'diamonds.xml')"
							cms:eval="href"
							cms:optional="class"
							>
							<cms:text constant="menu_jewellery"/>
						</a>
					</li>
				</ul>

				<ul>
					<cms:module
						name="shop"
						action="show_category_list"
						template="parts/category_menu_item.xml"
						/>
				</ul>

			</nav>
			<!-- Mobile Cart -->
			<cms:template file="parts/cart.xml"/>

			<!-- Shop categories -->
			<ul id="navigation">
				<cms:module
					name="shop"
					action="show_category"
					text_id="ring"
					template="parts/category_menu_item.xml"
					/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="bracelet"
					template="parts/category_menu_item.xml"
					/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="pendant"
					template="parts/category_menu_item.xml"
					/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="earing"
					template="parts/category_menu_item.xml"
					/>
			</ul>
		</header>
	</cms:mobile>
</document>
